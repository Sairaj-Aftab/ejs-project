
  
    <div class="container students mt-3">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <a class="btn btn-primary btn-sm" href="students/create">Add Student</a>
          <br>
          <br>
          <div class="card">
            <div class="card-header">
              <h4>All Students</h4>
            </div>
            <div class="card-body">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Image</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% students.forEach((element, index) => { %>
                    <tr>
                      <td><%= index + 1 %> </td>
                      <td><%= element.name %> </td>
                      <td><%= element.phone %> </td>
                      <td><img src="assets/upload/<%= element.photo %> " alt=""></td>
                      <td>
                        <a href="students/<%= element.id %> " class="btn btn-info btn-sm"><i class="fa fa-eye" aria-hidden="true"></i>
                        </a>
                        <a href="students/update/<%= element.id %> " class="btn btn-success btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="students/<%= element.id %> " class="btn btn-danger btn-sm"><i class="fa fa-trash" aria-hidden="true"></i></a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>